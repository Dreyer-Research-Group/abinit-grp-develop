# NaI pSIC-PBE - 8 atom cell

# npimage 3   # Explicit parallelism over images.
 autoparal 1

ndtset 1
#optdriver 0    # Not needed for a ground state calculation (including optimization of geometry)

#Parameters for the image dynamics
imgmov 6
nimage 3
ntimimage 1000
tolimg   1.0d-6
prtvolimg 1
imgwfstor 0
mixesimgf -59.00 +80.0 -20.0    # Must be coherent with the occupation numbers

# Occupation 
# occopt_1img 2   # Preferable to use occopt 0, common to all images. See below
# nsppol_1img 2   # Common to all images
#nspinor_1img 1   # Not needed
# nspden_1img 2    # Not needed
#  wtk_1img 1    # Not needed
#nband_1img 257 256
# nband_1img 257 257
 occ_1img  32*1 0  32*1 0
 charge_1img 0.0

occ_2img
 31*1 0.975 0.0
 32*1 0.0

occ_3img
 31*1 0.950  0
 32*1 0.0

###########################################################################
#Common to all images
###########################################################################

# Optimization parameters
 ionmov 2
 tolmxf 1.0d-6

# SCF procedure  
 iscf 17
 nstep 1000
 ecut 15  
 pawecutdg 40
 tolrff 0.02   #  Better for geometry optimization 
 diemac 2.0d0

# k-point grid
 kptopt 0  
 nkpt 1
 kpt 3*0

# Common to all images
 occopt 0
 nband 33 33
 nsppol 2

#Definition of the unit cell
 acell 3*12.24543

#Definition of the atom types and unit cell
 ntypat 2
 znucl 11 53
 pp_dirpath "$ABI_PSPDIR/Pseudodojo_paw_pbe_standard"
 pseudos "Na.xml, I.xml"

#Definition of atoms and positions
 natom 8
 typat 4*1 4*2 

 xred   0.0  0.0  0.0  # Na atoms
        0.0  0.5  0.5
        0.5  0.0  0.5
        0.5  0.5  0.0

        0.49 0.01 0.0  # I atoms    Number 5 and 6 get closer
        0.01 0.49 0.0 
        0.0  0.0  0.5
        0.5  0.5  0.5

