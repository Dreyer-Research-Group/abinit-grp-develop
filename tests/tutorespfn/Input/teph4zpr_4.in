# ZPR computation at Gamma for MgO

##############################################
####                SECTION: basic               
##############################################
 nband 30
 ecut 35.0

 ngkpt 4 4 4
 nshiftk 1
 shiftk 0 0 0

##############################################
####                 SECTION: eph                
##############################################
 optdriver 7              # Enter EPH driver
 eph_task 4               # Compute e-ph self-energy (real + imag)
 ddb_ngqpt 4 4 4
 eph_ngqpt_fine 4 4 4
 tmesh 0 200 1            # [start, step, num_T]

# Phonon band structure
 ph_ndivsm 10
 ph_nqpath 12
 ph_qpath
    0.0    0.0    0.0
    0.5    0.0    0.5
    0.5    0.25   0.75
    0.375  0.375  0.75
    0.0    0.0    0.0
    0.5    0.5    0.5
    0.625  0.25   0.625
    0.5    0.25   0.75
    0.5    0.5    0.5
    0.375  0.375  0.75
    0.625  0.25   0.625
    0.5    0.0    0.5

# Phonon DOS
 ph_intmeth 2
 ph_wstep 0.0001 eV
 ph_ngqpt 16 16 16

##############################################
####                SECTION: files               
##############################################
 getddb_filepath "teph4zpr_1_DDB"
 getdvdb_filepath "teph4zpr_2_DVDB"
 getwfk_filepath "teph4zpr_3o_WFK"

##############################################
####                 SECTION: gw                 
##############################################
 nkptgw 1
 kptgw
    0.0    0.0    0.0
 bdgw
    8 9
 zcut 0.01 eV

 pp_dirpath = "$ABI_PSPDIR"
 pseudos = "Mg-sp-gw.psp8, O.psp8"

 structure "abivars:MgO_eph_zpr/mgo.abivars"

