# LiF Very rough 2x2x2 q-point grid; low ecut.
ndtset 3

# Global parameters.
ecut   35
tolwfr 1e-16
#mixprec 1
boxcutmin 1.7
prtphdos 0

# K-mesh (must equal the one used to produce the WFK file)
ngkpt    4 4 4
nshiftk  1
shiftk   0.0 0.0 0.0

ph_nqpath 3
ph_qpath 
  0 0 0 
  0.5 0 0
  0.5 0.5 0

# Global
#optdriver  7
nband      10
symsigma  1
tmesh 0 300 2
prteliash 1

getwfk   20    # Read GS wavefunctions from DS20_WFK
getddb   20    # Read DDB files from DS20_DDB
optdriver 7
ddb_ngqpt 2 2 2  # q-mesh used to produce the DDB file (must be consistent with DDB data)

############
# DATASET 1
############
#eph_task1  4
#gw_qprange1 4
#sigma_ngkpt1 2 2 2
#sigma_nshiftk1 1
#sigma_shiftk 0 0 0 

kerange_path1 "t157o_DS7_KERANGE.nc"
getden1   20    # Read DEN wavefunctions from DS20_DEN
kptopt1 0           
iscf1 -2
# cancel globals
optdriver1 0
getwfk1  0    
getddb1  0    

############
# DATASET 2
############
# interpolate DVDB
eph_task2 5
eph_ngqpt_fine2 4 4 4

############
# DATASET 3
############
eph_task3 -4
getdvdb3   -1
eph_intmeth3 2
eph_ngqpt_fine3 4 4 4
sigma_erange3 0.25 0.25 eV   # Select kpts in fine mesh within this energy window.

