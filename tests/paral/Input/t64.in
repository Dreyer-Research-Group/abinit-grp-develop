# PAW with RM-DIIS
ndtset 2

paral_kgb 1
use_gemm_nonlop 1

# Dataset 1
#rmm_diis1 +1
tolvrs1 1e-8
npband1 4 bandpp1 2 npfft1 1 npkpt1 1 

# Dataset 1
#rmm_diis2 -1
getwfk2 -1
npband2 1 bandpp2 2 npfft2 2 npkpt2 2
tolvrs2 1e-8

nband  8
ecut   12
pawecutdg 24
diemac 12.0

ngkpt   4 4 4
nshiftk 1
shiftk  0.0 0.0 0.0

pp_dirpath "$ABI_PSPDIR"
pseudos "Pseudodojo_paw_pw_standard/Si.xml"

# Definition of the unit cell
acell 1.0 1.0 1.0
rprim 0.0 5.083880873222 5.083880873222
      5.083880873222 0.0 5.083880873222
      5.083880873222 5.083880873222 0.0

# Definition of the atom types
ntypat 1
znucl 14

natom 2
typat 1 1
xred
      0.0  0.0  0.0
      1/4  1/4  1/4
