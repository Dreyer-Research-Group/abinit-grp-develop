##############################################
####                SECTION: basic               
##############################################
 nband 20
 ecut 35.0

 ngkpt 4 4 4
 nshiftk 1
 shiftk 0 0 0
 tolvrs 1e-12

##############################################
####                 SECTION: eph                
##############################################
 optdriver 7
 eph_task 4
 ddb_ngqpt 4 4 4
 tmesh 0 200 1

 #ph_intmeth 2
 #ph_wstep 0.0001 eV
 #ph_ngqpt 16 16 16
 #ph_qshift 0 0 0
 #ph_nqshift 1
 #
 eph_ngqpt_fine 4 4 4

##############################################
####                SECTION: files               
##############################################
 getddb_filepath "teph4zpr_1_DDB"
 getdvdb_filepath "teph4zpr_2_DVDB"
 getwfk_filepath "teph4zpr_3o_WFK"

 eph_stern 1
 getpot_filepath "MgO_eph_zpr/flow_zpr_mgo/w0/t0/outdata/out_POT.nc"

##############################################
####                 SECTION: gw                 
##############################################
 nkptgw 2
 kptgw
    0.0000000000    0.0000000000    0.0000000000
    0.5000000000    0.5000000000    0.0000000000
 bdgw
 8 9
 8 9
 zcut 0.01 eV

 pp_dirpath = "$ABI_PSPDIR"
 pseudos = "Mg-sp-gw.psp8, O.psp8"

##############################################
####                  STRUCTURE                  
##############################################
 structure "abivars:MgO_eph_zpr/mgo.abivars"

