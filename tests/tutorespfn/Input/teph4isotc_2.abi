#
ndtset  2

iscf -2
getden_filepath "MgB2_eph4isotc/flow_mgb2_phonons/w0/t0/outdata/out_DEN.nc"

tolwfr 1e-14

#Dataset 1: Band structure calculation.
kptopt1 -7
ndivsm1  10    
kptbounds1    
    0.0 0.0 0.0   # Gamma
    1/3 1/3 0.0   # K
    0.5 0.0 0.0   # M
    0.0 0.0 0.0   # Gamma
    0.0 0.0 0.5   # A
    1/3 1/3 0.5   # H
    0.5 0.0 0.5   # L
    0.0 0.0 0.5   # A

# Dataset 2: NSCF on a k-mesh
ngkpt2   12 12 12
nshiftk2 1
shiftk2  0.0 0.0 0.0   


#optdriver 8
#wfk_task "wfk_kpts_erange"
#getwfk_filepath "161616_WFK"

# Define fine k-mesh for the interpolation
#sigma_ngkpt   64 64 64
#sigma_nshiftk 1
#sigma_shiftk  0 0 0
#
#sigma_erange 0.0 0.2 eV   # Select kpts in fine mesh within this energy window.
#einterp 1 5 0 0           # Parameters for star-function interpolation

#COMMON INPUT DATA
ecut    20.0  
nband   8
occopt  4              # Marzari smearing
tsmear  0.04

# MgB2 structure
structure "abifile:MgB2_eph4isotc/flow_mgb2_phonons/w0/t0/outdata/out_DEN.nc"

pp_dirpath "$ABI_PSPDIR"
pseudos "PseudosTM_pwteter/12mg.pspnc, 05b.soft_tm"

