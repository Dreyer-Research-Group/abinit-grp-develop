##############################################
####                SECTION: basic               
##############################################
#
 nband 100
 nbdbuf 10
 ecut 35.0

 ngkpt 4 4 4
 nshiftk 1
 shiftk 0 0 0

 nstep 150
 tolwfr 1e-15
 iscf -2          # NSCF run from DEN.nc

 ngfft 30 30 30   # Important
 getden_filepath "MgO_eph_zpr/flow_zpr_mgo/w0/t0/outdata/out_DEN.nc"

##############################################
####               SECTION: gstate               
##############################################
 #nbdbuf 4
 #kptbounds
 #   0.0000000000    0.0000000000    0.0000000000
 #   0.5000000000    0.0000000000    0.5000000000
 #   0.5000000000    0.2500000000    0.7500000000
 #   0.3750000000    0.3750000000    0.7500000000
