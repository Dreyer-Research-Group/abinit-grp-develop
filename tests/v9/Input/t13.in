#################################################################
# Automatic test for ABINIT:                                    #
#    Prepare test for Optics                                    #
#              BCC iron, ferromagnetic, GGA, PAW                #
#################################################################

 ndtset 6

#First dataset : SCF run
 prtden1  1
  nband1  14
 kptopt1  1
 tolwfr1  1.0d-12

#Second dataset : NSCF run with kptopt 1 (more bands)
   iscf2 -2
 getwfk2  1
 getden2  1
 kptopt2  1
 tolwfr2  1.0d-12

#Third dataset : NSCF run with kptopt 3
   iscf3 -2
 getwfk3  2
 getden3  1
 kptopt3  3
 tolwfr3  1.0d-12

# ddk response function
   iscf4 -3
   nqpt4  1
    qpt4  0.0d0 0.0d0 0.0d0
  rfdir4  1 0 0
 rfelfd4  2
 getwfk4  3

# ddk response function
   iscf5 -3
   nqpt5  1
    qpt5  0.0d0 0.0d0 0.0d0
  rfdir5  0 1 0
 rfelfd5  2
 getwfk5  3


# ddk response function
   iscf6 -3
   nqpt6  1
    qpt6  0.0d0 0.0d0 0.0d0
  rfdir6  0 0 1
 rfelfd6  2
 getwfk6  3

#########################
# Common input parameters
  ! Unit cell
    acell   3*5.42
    rprim   -0.5  0.5  0.5
             0.5 -0.5  0.5
             0.5  0.5 -0.5
    ntypat 1  natom 1  typat 1
    znucl 26
    xred 0   0   0

  ! K-points and occupations
    kptopt 3
    ngkpt 4 4 4
    nshiftk 1
    shiftk 1/2 1/2 1/2
    occopt 7
    tsmear 0.008
    nband 30
    nbdbuf 2
    spinat 0 0 5
    nsppol 2

  ! Convergence parameters
    ecut 7. pawecutdg 12.  pawxcdev 0
    tolvrs 1.d-9
    nstep 20

