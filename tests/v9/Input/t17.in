#
# GS calculation with the CG + RMM-DIIS eigensolver and NC pseudos
#
rmm_diis  1       # Activate CG + RMM-DIIS.
boxcutmin 1.8

ndtset 2

nspinor1 1
nspinor2 2
nspden2  1
getwfk2 -1

ecut   16
diemac 12.0

nband  8
toldfe 1e-8

ngkpt   4 4 4
nshiftk 1
shiftk  0.0 0.0 0.0

pp_dirpath "$ABI_PSPDIR"
#pseudos "Pseudodojo_nc_sr_04_pw_standard_psp8/Si.psp8"
pseudos "Si_r.psp8"

# Definition of the unit cell
acell 1.0 1.0 1.0
rprim 0.0 5.083880873222 5.083880873222
      5.083880873222 0.0 5.083880873222
      5.083880873222 5.083880873222 0.0

# Definition of the atom types
ntypat 1
znucl 14

natom 2
typat 1 1
xred
      0.0  0.0  0.0
      1/4  1/4  1/4

