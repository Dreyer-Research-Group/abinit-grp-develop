ecut 6
ngkpt 2 2 2

prt1dm 1
prtpot 1

ndtset 6

magcon_lambda 0.05

nspinor 2 nspden 4
so_psp 0

getwfk -1

# DS 1 : no constraint
magconon1 0
spinat1 0 0 3

# DS 2 constrain direction, non collinear spin
magconon2 1
spinat2 0 0 3

# DS 3 constrain direction y, start from different spin wf (DS 2 along z), non collinear spin
magconon3 1
spinat3 0 3 0

# DS 4 constrain direction and amplitude, non collinear spin
magconon4 2
magcon_lambda4 0.01
spinat4 0 1.5 0 

# DS 5 constrain direction, collinear spin
magconon5 1
spinat5 0 0 3
nspinor5 1 
nspden5 2 
nsppol5 2 
getwfk5 0

# DS 6 constrain direction and amplitude, collinear spin
magconon6 2
spinat6 0 0 3
nspinor6 1 
nspden6 2 
nsppol6 2 
getwfk6 0

nband 10
occopt 7
tsmear 0.0001

toldfe 1.e-10

acell 3*5.328

kptopt 4
shiftk 0 0 0
znucl 26
ntypat 1
typat 1
natom 1
xred 0 0 0
rprim
-0.5  0.5  0.5
 0.5 -0.5  0.5
 0.5  0.5 -0.5

