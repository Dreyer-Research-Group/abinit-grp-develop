#
# Configuration information for the Abinit Test Suite
#

# Paths
pkgdatadir="@pkgdatadir@"

# Timeout support
enable_test_timeout="yes"
with_test_timeout="1200"

# External packages
enable_atompaw="@abi_test_atompaw@"
enable_bigdft="@abi_test_bigdft@"
enable_etsf_io="@abi_test_etsf_io@"
enable_psml="@abi_test_psml@"
enable_libxc="@abi_test_libxc@"
enable_wannier90="@abi_test_wannier90@"

# Internal optional series
enable_gpu="@enable_gpu@"
enable_gw_dpc="@enable_gw_dpc@"
enable_mpi="@enable_mpi@"

# Maintainer tests
enable_fast_check="@enable_fast_check@"
enable_maintainer_checks="@enable_maintainer_checks@"
enable_pkg_check="@enable_pkg_check@"

# MPI parameters
with_mpi_prefix="@with_mpi_prefix@"
MPI_2PROCS="@MPI_2PROCS@"
MPI_RUNNER="@MPI_RUNNER@"
