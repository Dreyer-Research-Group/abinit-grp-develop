#
ndtset  1
optdriver 7
eph_task  1

getddb_filepath  "MgB2_eph4isotc/flow_mgb2_phonons/w1/outdata/out_DDB"
getdvdb_filepath "teph4isotc_1_DVDB"
getwfk_filepath  "MgB2_eph4isotc/flow_mgb2_phonons/w0/t0/outdata/out_WFK.nc"

ddb_ngqpt 4 4 4
eph_ngqpt_fine 12 12 12

dipdip 0         # No treatment of the dipole-dipole part. OK for metals
mixprec 1
boxcutmin 1.1
eph_fsewin 0.3 eV
eph_intmeth 1
eph_fsmear -1.0

# Dataset 1: GS calculation
ngkpt   12 12 12
nshiftk 1
shiftk  0.0 0.0 0.0 

ph_nqpath 8
ph_qpath
           0.0 0.0 0.0   # Gamma
           1/3 1/3 0.0   # K
           0.5 0.0 0.0   # M
           0.0 0.0 0.0   # Gamma
           0.0 0.0 0.5   # A
           1/3 1/3 0.5   # H
           0.5 0.0 0.5   # L
           0.0 0.0 0.5   # A


#COMMON INPUT DATA###########################################################
ecut    35.0  
nband   8
occopt  4              # Marzari smearing
tsmear 0.02

# MgB2 structure
structure "abifile:MgB2_eph4isotc/flow_mgb2_phonons/w0/t0/outdata/out_DEN.nc"

pp_dirpath "$ABI_PSPDIR"
pseudos "Pseudodojo_nc_sr_04_pw_standard_psp8/Mg-low.psp8,
         Pseudodojo_nc_sr_04_pw_standard_psp8/B.psp8"

